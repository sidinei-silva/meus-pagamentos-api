{
  "name": "boilerplate-ts-express-api",
  "version": "1.0.0",
  "main": "src/shared/server.ts",
  "author": "Sidinei Silva <sidinei.silva02@gmail.com>",
  "license": "MIT",
  "scripts": {
    "commit": "cz",
    "prepare": "husky install",
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/shared/infra/http/server.ts",
    "test": "NODE_ENV=test jest --runInBand --detectOpenHandles",
    "eslint:check": "eslint \"{src,apps,libs,test}/**/*.ts\" ",
    "eslint:fix": "eslint --fix \"{src,apps,libs,test}/**/*.ts\" ",
    "test:watch": "NODE_ENV=test jest --watch --runInBand --detectOpenHandles",
    "build": "tsc",
    "release": "standard-version",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -d src/shared/infra/database/typeorm/datasources/postgresDataSource.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.10.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.6.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/morgan": "^1.9.3",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.2",
    "supertest": "^6.2.2",
    "ts-node": "^10.7.0",
    "tsyringe": "^4.6.0",
    "typeorm": "^0.3.5",
    "uuid": "^8.3.2",
    "winston": "^3.6.0"
  }
}
